APP_ENV=production

DATABASE_URL=postgresql+psycopg2://calendar_user:change_me@db:5432/calendar
JWT_SECRET=replace_with_a_long_random_secret_at_least_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Comma-separated lists
CORS_ORIGINS=https://calendar.yourcompany.com
TRUSTED_HOSTS=calendar.yourcompany.com,localhost,127.0.0.1

# Production should be false after first admin has been created
ALLOW_CREATE_FIRST_ADMIN=false
FIRST_ADMIN_BOOTSTRAP_TOKEN=replace_with_one_time_bootstrap_token

# In production, run migrations explicitly and keep this false
ENABLE_AUTO_SCHEMA_CREATE=false

AVATAR_MAX_BYTES=5242880
PROFILE_DOC_MAX_BYTES=10485760
LIBRARY_DOC_MAX_BYTES=20971520

# Optional Cloudflare R2 (S3-compatible) object storage
# On Render free tier, configure this to persist uploads across restarts.
R2_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
R2_BUCKET=shr-planning-files
R2_ACCESS_KEY_ID=replace_with_r2_access_key_id
R2_SECRET_ACCESS_KEY=replace_with_r2_secret_access_key
R2_REGION=auto

# SMTP password reset
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=replace_with_smtp_username
SMTP_PASSWORD=replace_with_smtp_password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_FROM_EMAIL=no-reply@yourcompany.com
FRONTEND_BASE_URL=https://calendar.yourcompany.com
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60
